<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/esm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_action_esm_text" />

    <ImageView
        android:id="@+id/esm_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/esm_text"
        android:src="@drawable/ic_action_esm_radiobox" />

    <ImageView
        android:id="@+id/esm_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/esm_radio"
        android:src="@drawable/ic_action_esm_checkbox" />

    <ImageView
        android:id="@+id/esm_likert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/esm_check"
        android:src="@drawable/ic_action_esm_likert" />

    <ImageView
        android:id="@+id/esm_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/esm_likert"
        android:src="@drawable/ic_action_esm_quick" />

    <ImageView
        android:id="@+id/esm_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/esm_quick"
        android:src="@drawable/ic_action_esm_survey" />

</RelativeLayout>
